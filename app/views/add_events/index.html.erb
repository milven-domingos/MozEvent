<p id="notice"><%= notice %></p>

<h1>Add Events</h1>

<table>
  <thead>
    <tr>
      <th>Nome do event</th>
      <th>Local do evento</th>
      <th>Data do evento</th>
      <th>Hora do event</th>
      <th>Descricao do evento</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @add_events.each do |add_event| %>
      <tr>
        <td><%= add_event.nome_do_event %></td>
        <td><%= add_event.local_do_evento %></td>
        <td><%= add_event.data_do_evento %></td>
        <td><%= add_event.hora_do_event %></td>
        <td><%= add_event.descricao_do_evento %></td>
        <td><%= add_event.slug %></td>
        <td><%= link_to 'Show', add_event %></td>
        <td><%= link_to 'Edit', edit_add_event_path(add_event) %></td>
        <td><%= link_to 'Destroy', add_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

